<h1 style="font-size:60px;">Todos App</h1>
<h1>Welcome !!!! Here you can add your tasks whatever you want to do<h1>
<b>

<ol>
  <% @todos.each do |todo| %>
    <li>
      <%= todo.title %> - <%= todo.description %> 
      <% if todo.completed %>
        <span style="color: green;"> --Task Completed</span><button><%= link_to "Remove item", todo, data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} %></button>
      <% else %>
        <span style="color: red;"> --Task Incomplete</span><button><%= link_to "Remove item", todo, data: {turbo_method: :delete,turbo_confirm: "Are you sure?"} %></button>
      <% end %>
    </li>
  <% end %>
</ol>
<%= link_to 'New Todo', new_todo_path %>
